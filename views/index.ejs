<%- include('header') -%>

<div class="grid">
  <h1><%= title %></h1>
  <h2>Viðburðir á næstunni</h2>

  <ul >
    <!-- Gera for lúppu til að setja inn alla viðburði á forsíðu, taka inn fylki af viðburðum-->
    <% data.events.forEach((event) => { %>
      <li class="event">
        <a href="/slug"><%= event.name %></a>
        <h3><%= event.description %></h3>
      </li>
    <%}) %>
  </ul>

  <hr>
<a href="/admin/login">Innskráning stjórnanda</a>
</div>

<%- include('footer') -%>

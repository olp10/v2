<%- include('header') -%>

<div class="grid">
  <h1 id="eventName"><%= data.name.name %></h1>
  <h3><%= data.name.description %></h3>

  <% if (registrations.length === 0) {  %>
    <h1 style="margin-top: 30px;">Skráningar á viðburð</h1>
    <h3>Enginn hefur skráð sig á þennan viðburð</h3>

  <% } %>

  <% if (registrations.length > 0) { %>
    <ul>
      <% registrations.forEach((registration) => { %>
        <li class="event" style="margin-left: 20px;">
          <h3><%= registration.name %></h3>
          <h4><%= registration.comment %></h4>
        </li>

      <% }) %>
    </ul>

  <% } %>


  <form method="post" action="/" enctype="application/x-www-form-urlencoded">
    <legend><strong>Skráðu þig</strong></legend>
    <div class="field">
      <label for="name">Nafn*:</label>
      <input type="text" id="name" name="name" value="" class="">
    </div>

    <div class="field">
      <label for="comment">Athugasemd:</label>
        <textarea type="text" name="comment" value="" class=""></textarea>
    </div>
    <input type="hidden" id="eventName" name="eventName" value="<%= data.name.name %>" class="">
    <button style="width: 30%;">Skrá mig</button>

  </form>

  <a href="/">Til baka</a>


</div>
<%- include('footer') -%>
